{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EvalCase",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "suite", "messages"],
  "properties": {
    "id": { "type": "string" },
    "suite": { "type": "string" },
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["role", "content"],
        "properties": {
          "role": { "enum": ["system", "user", "assistant", "tool"] },
          "content": { "type": "string" }
        }
      }
    },
    "expected_schema_path": { "type": "string" },
    "expected_tool_calls": { "type": "array", "items": { "type": "string" } },
    "expected_refusal": { "type": "boolean" },
    "expected_output_json": { "type": "object" },
    "expected_output_text": { "type": "string" },
    "tags": { "type": "array", "items": { "type": "string" } }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LLMLogRecord",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "timestamp",
    "environment",
    "user_context",
    "request",
    "response",
    "validations",
    "outcome",
    "privacy"
  ],
  "properties": {
    "id": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "environment": { "enum": ["dev", "staging", "prod"] },
    "user_context": {
      "type": "object",
      "additionalProperties": false,
      "required": ["workspace_id"],
      "properties": {
        "workspace_id": { "type": "string" },
        "business_id": { "type": "string" },
        "operator_role": { "type": "string" }
      }
    },
    "request": {
      "type": "object",
      "additionalProperties": false,
      "required": ["system_prompt_hash", "model", "messages", "tools_available", "rag_context_ids"],
      "properties": {
        "system_prompt_hash": { "type": "string" },
        "model": { "type": "string" },
        "messages": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["role", "content"],
            "properties": {
              "role": { "enum": ["system", "user", "assistant", "tool"] },
              "content": { "type": "string" }
            }
          }
        },
        "tools_available": { "type": "array", "items": { "type": "string" } },
        "rag_context_ids": { "type": "array", "items": { "type": "string" } }
      }
    },
    "response": {
      "type": "object",
      "additionalProperties": false,
      "required": ["output_text", "tool_calls", "latency_ms", "token_usage", "cost_usd_estimate"],
      "properties": {
        "output_text": { "type": "string" },
        "output_json": { "type": ["object", "null"] },
        "tool_calls": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name"],
            "properties": {
              "name": { "type": "string" },
              "arguments": { "type": ["string", "object", "null"] }
            }
          }
        },
        "latency_ms": { "type": "number" },
        "token_usage": {
          "type": "object",
          "additionalProperties": false,
          "required": ["input_tokens", "output_tokens", "total_tokens"],
          "properties": {
            "input_tokens": { "type": "number" },
            "output_tokens": { "type": "number" },
            "total_tokens": { "type": "number" }
          }
        },
        "cost_usd_estimate": { "type": ["number", "null"] }
      }
    },
    "validations": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema_valid", "doctrine_score", "groundedness_score", "clarity_score", "errors"],
      "properties": {
        "schema_valid": { "type": "boolean" },
        "doctrine_score": { "type": "number", "minimum": 0, "maximum": 1 },
        "groundedness_score": { "type": "number", "minimum": 0, "maximum": 1 },
        "clarity_score": { "type": "number", "minimum": 0, "maximum": 1 },
        "errors": { "type": "array", "items": { "type": "string" } }
      }
    },
    "outcome": {
      "type": "object",
      "additionalProperties": false,
      "required": ["accepted", "corrected"],
      "properties": {
        "accepted": { "type": "boolean" },
        "corrected": { "type": "boolean" },
        "correction_reference_id": { "type": "string" }
      }
    },
    "privacy": {
      "type": "object",
      "additionalProperties": false,
      "required": ["pii_redacted", "redaction_notes"],
      "properties": {
        "pii_redacted": { "type": "boolean" },
        "redaction_notes": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}

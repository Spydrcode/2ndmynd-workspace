{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/lib/learning/*": ["./src/lib/learning/*"],
      "@/lib/present/*": ["./src/lib/present/*"],
      "@/lib/rag": ["./src/lib/rag/index.ts"],
      "@/lib/rag/*": ["./src/lib/rag/*"],
      "@/lib/intelligence/*": ["./src/lib/intelligence/*"],
      "@/lib/benchmarks/*": ["./src/lib/benchmarks/*"],
      "@/lib/internal/*": ["./src/lib/internal/*"],
      "@/lib/snapshot/*": ["./src/lib/snapshot/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "ml/**/*.ts",
    "tests/**/*.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "seed",
    "supabase",
    "ml_artifacts",
    "ml_review",
    "lib/decision/v2/present_broken.ts"
  ]
}
